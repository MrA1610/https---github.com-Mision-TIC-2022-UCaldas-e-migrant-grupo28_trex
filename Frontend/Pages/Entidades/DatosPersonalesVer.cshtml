@page
@model Frontend.Pages.Entidades.DatosPersonalesVerModel
@{
}

<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <h3>Registra tus Datos [<a href="/Entidades">Pagina Principal</a>]
                <button type="button" class="btn btn-warning btn-lg" data-toggle="modal"
                    data-target="#myModal">Modificar</button>
        </h3>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <p class="text-warning">@ViewData["Mensaje"]</p>
        @if(ViewData["Error"]=="ErrorCreate"){
            <p class="text-danger">Esta entidad ya se encuentra registrada, <button class="btn btn-warning"><a href="/Entidades">Volver Atras</a></button></p>
        }
    </div>
</div>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="_entidad.RazonSocial" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.RazonSocial" class="form-control" readonly />
                        <span asp-validation-for="_entidad.RazonSocial" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.NIT" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.NIT" class="form-control" readonly />
                        <span asp-validation-for="_entidad.NIT" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Direccion" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Direccion" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Direccion" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Telefono" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Telefono" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Direccion_Electronica" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Direccion_Electronica" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Direccion_Electronica" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Ciudad" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Ciudad" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Ciudad" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Pagina_Web" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Pagina_Web" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Pagina_Web" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Sector" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Sector" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Sector" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Servicios" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="_entidad.Servicios" class="form-control" readonly />
                        <span asp-validation-for="_entidad.Servicios" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="_entidad.userName" value="@User.Identity.Name"/>
                <div class="form-group">
                    @* <input type="submit" value="Crear" class="btn btn-secondary" /> *@
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row justify-content-center bg-light">
    <div class="col-sm-12">
        <!-- Trigger the modal with a button -->

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content  justify-content-center">
                    <div class="modal-header">
                        <h4 class="modal-title">Actualiza Tu Informacion Personal</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10">
                                    <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="_entidad.RazonSocial" class="col-sm-4
                     control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.RazonSocial" class="form-control" />
                        <span asp-validation-for="_entidad.RazonSocial" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.NIT" class="col-sm-4
                     control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.NIT" class="form-control" />
                        <span asp-validation-for="_entidad.NIT" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Direccion" class="col-sm-4
                     control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.Direccion" class="form-control" />
                        <span asp-validation-for="_entidad.Direccion" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Telefono" class="col-sm-4
                     control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.Telefono" class="form-control" />
                        <span asp-validation-for="_entidad.Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Direccion_Electronica" class="col-sm-4
                     control-label">Email</label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.Direccion_Electronica" class="form-control" />
                        <span asp-validation-for="_entidad.Direccion_Electronica" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Ciudad" class="col-sm-4
                     control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.Ciudad" class="form-control" />
                        <span asp-validation-for="_entidad.Ciudad" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Pagina_Web" class="col-sm-4
                     control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="_entidad.Pagina_Web" class="form-control" />
                        <span asp-validation-for="_entidad.Pagina_Web" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Sector" class="col-sm-4
                     control-label"> </label>
                    <div class="col-sm-8">
                        <select asp-for="_entidad.Sector" class="form-control" asp-items="@Model._listaSector">
                            <option value="-1">Seleccionar El Sector</option>
                        </select>
                        <span asp-validation-for="_entidad.Sector" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="_entidad.Servicios" class="col-sm-4
                     control-label"> </label>
                    <div class="col-sm-8">
                        <select asp-for="_entidad.Servicios" class="form-control" asp-items="@Model._listaServicios">
                            <option value="-1">Seleccionar El Servicios</option>
                        </select>
                        <span asp-validation-for="_entidad.Servicios" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="_entidad.userName" value="@User.Identity.Name"/>
                <div class="form-group">
                    <input type="submit" value="Actualizar" class="btn btn-secondary" />
                </div>
            </form>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>



@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}